@using Timeline.Models
@using Timeline.Services
@inject TimelineService TimelineService

<div class="person-form">
    <h3>@(EditingPerson != null ? "Edit Person" : "Add Person")</h3>
    
    <EditForm Model="@currentPerson" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name:</label>
            <InputText class="form-control" @bind-Value="currentPerson.Name" placeholder="Enter name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Birth Date:</label>
            <InputDate class="form-control" @bind-Value="currentPerson.BirthDate" />
        </div>

        <div class="mb-3">
            <label class="form-label">Death Date:</label>
            <InputDate class="form-control" @bind-Value="deathDate" />
            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" @bind="isAlive" id="aliveCheck" />
                <label class="form-check-label" for="aliveCheck">
                    Currently Alive
                </label>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Description:</label>
            <InputTextArea class="form-control" @bind-Value="currentPerson.Description" 
                          placeholder="Enter description" rows="3" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                @(EditingPerson != null ? "Update" : "Add Person")
            </button>
            @if (EditingPerson != null)
            {
                <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
            }
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    public Person? EditingPerson { get; set; }

    [Parameter]
    public EventCallback OnFormSubmitted { get; set; }

    private Person currentPerson = new();
    private DateTime? deathDate;
    private bool isAlive;

    protected override void OnParametersSet()
    {
        if (EditingPerson != null)
        {
            currentPerson = new Person
            {
                Id = EditingPerson.Id,
                Name = EditingPerson.Name,
                BirthDate = EditingPerson.BirthDate,
                DeathDate = EditingPerson.DeathDate,
                Description = EditingPerson.Description
            };
            deathDate = EditingPerson.DeathDate;
            isAlive = !EditingPerson.DeathDate.HasValue;
        }
        else
        {
            currentPerson = new Person { BirthDate = DateTime.Today };
            deathDate = null;
            isAlive = false;
        }
    }

    private async Task HandleSubmit()
    {
        currentPerson.DeathDate = isAlive ? null : deathDate;

        if (EditingPerson != null)
        {
            await TimelineService.UpdatePersonAsync(currentPerson);
        }
        else
        {
            await TimelineService.AddPersonAsync(currentPerson);
        }

        currentPerson = new Person { BirthDate = DateTime.Today };
        deathDate = null;
        isAlive = false;

        await OnFormSubmitted.InvokeAsync();
    }

    private async Task CancelEdit()
    {
        currentPerson = new Person { BirthDate = DateTime.Today };
        deathDate = null;
        isAlive = false;
        await OnFormSubmitted.InvokeAsync();
    }
}
